.buttonContainer {
  background: var(--light-gray);
  background: linear-gradient(0deg, var(--medium-gray) 30%, var(--light-gray) 70%);
  border: 0;
  border-radius: var(--search-border-radius);
  box-shadow: var(--search-box-shadow);
  color: var(--dark-gray);
  cursor: pointer;
  display: inline-flex;
  font-family: var(--font-family);
  padding: 5px 10px 4px 10px;

  &:focus {
    outline-color: rgb(135, 206, 250);
  }

  .buttonIconLeft {
    order: -1;
    padding-right: 5px;
  }
}
